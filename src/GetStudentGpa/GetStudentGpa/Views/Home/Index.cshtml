@* @model YourNamespace.LoginViewModel *@
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    @using (Html.BeginForm("GetStudentGPAInfo", "Home", FormMethod.Post))
    {
        <div>
            <label for="studentId">StudentId:</label>
            <input type="text" id="studentId" name="studentId" />
        </div>
        <p>Give the Username and Password having access with Student product</p>
        <div>
            <label for="username">Username :</label>
            <input type="text" id="username" name="username" />
        </div>
        <div>
            <label for="password">Password :</label>
            <input type="password" id="password" name="password" />
        </div>
        <button type="submit">Get Student Information</button>
    }
</div>


